extends layout 

block content 
  h1= title 
  form(action='/home/create-message', method='post')
    label(for='title') Title:
    input#title(type='text', name='title', required)
    label(for='message_body') Message:
    input#message-body(type='text', name='message_body', required, wrap="soft")
    button(type='submit') Create

  if errors
    ul
      each error in errors 
        li!= error.msg